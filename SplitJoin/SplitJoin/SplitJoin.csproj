    <PackageReference Include="runtime.win-arm64.Microsoft.DotNet.ILCompiler" Version="7.0.0-alpha.1.21602.1" />
    <PackageReference Include="runtime.win-x64.Microsoft.DotNet.ILCompiler" Version="7.0.0-alpha.1.21602.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ArrayUtility\ArrayUtility.csproj" />
